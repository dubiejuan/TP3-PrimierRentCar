<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteFigma"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView

            android:id="@+id/imageFragmentUserName"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/lilo" />

        <TextView
            android:id="@+id/txtFragmentUserName"
            android:layout_width="94dp"
            android:layout_height="32dp"
            android:textAlignment="center"
            android:textColor="@color/blackFigma"
            android:text="Martin" />


    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="142dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageFragmentProfileNotification"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat ="@drawable/alarm" />

            <TextView
                android:id="@+id/txtFragmentProfileNotification"
                android:layout_width="94dp"
                android:layout_height="32dp"
                android:textColor="@color/cyanFigma"
                android:textAlignment="center"
                android:gravity="center"
                android:text="Notification" />

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="56dp"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageFragmentProfileNotification2"
                    android:layout_width="16dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    app:srcCompat="@drawable/bell" />

                <TextView
                    android:id="@+id/txtFragmentProfileNotification2"
                    android:layout_width="288dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="10dp"
                    android:text="Notificaciones"
                    android:textAlignment="textStart"
                    android:textColor="@color/blackFigma"
                    android:textSize="16dp" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    </LinearLayout>
</FrameLayout>