<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="341dp"
    android:layout_height="112dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="24dp"
    app:cardCornerRadius="32dp"
    android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCardViewCarName"
                    android:layout_width="142dp"
                    android:layout_height="20dp"
                    android:text=""
                    android:textAlignment="viewEnd"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgCardViewCarImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/arrow" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    >
                    <ImageView
                        android:id="@+id/imgCardViewCarTransmission"
                        android:layout_width="20dp"
                        android:layout_height="11dp"
                        app:srcCompat="@drawable/manual_transmission" />

                    <TextView
                        android:id="@+id/txtCardViewCarTransmission"
                        android:layout_width="64dp"
                        android:layout_height="12dp"
                        android:textSize="12sp"
                        android:text=""
                        android:textAlignment="viewEnd"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="start"
                    android:layout_marginStart="10dp"  android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imgCardViewCarFuelType"
                        android:layout_width="20dp"
                        android:layout_height="11dp"
                        app:srcCompat="@drawable/gauge" />

                    <TextView
                        android:id="@+id/txtCardViewCarFuelType"
                        android:layout_width="64dp"
                        android:layout_height="12dp"
                        android:textSize="12sp"
                        android:text=""
                        android:textAlignment="viewEnd"

                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp">

                    <ImageView
                        android:id="@+id/imgCardViewCarYear"
                        android:layout_width="20dp"
                        android:layout_height="11dp"
                        app:srcCompat="@drawable/calendar" />

                    <TextView
                        android:id="@+id/txtCardViewCarYear"
                        android:layout_width="64dp"
                        android:layout_height="12dp"
                        android:textSize="12sp"
                        android:text=""
                        android:textAlignment="viewEnd"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp">

                    <ImageView
                        android:id="@+id/imgCardViewCarBrand"
                        android:layout_width="20dp"
                        android:layout_height="11dp"
                        app:srcCompat="@drawable/brand" />

                    <TextView
                        android:id="@+id/txtCardViewCarBrand"
                        android:layout_width="64dp"
                        android:layout_height="12dp"
                        android:textSize="12sp"
                        android:text=""
                        android:textAlignment="viewEnd"

                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

</androidx.cardview.widget.CardView>